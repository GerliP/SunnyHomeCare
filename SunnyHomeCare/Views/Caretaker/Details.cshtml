<h2>Visits</h2>

<table class="table">
    <tr>
        <th>
            Date
        </th>
        <th>
            Patient Name
        </th>
        <th>
            Patient number
        </th>

        <th>
            Patient email
        </th>

        <th>
            Patient gender
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Caretakers.FirstOrDefault().Visits)
    {
    <tr>
        <td>
            Patient @Html.ActionLink("Info", "PatientInfo", new { id = item.Patient.User.Id })
        <td>
            @Html.DisplayFor(modelItem => item.Date.Value)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Patient.User.Firstname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Patient.User.ContactNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Patient.User.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Patient.User.Gender)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Patient.User.Address)
        </td>
    </tr>
    }
</table>
